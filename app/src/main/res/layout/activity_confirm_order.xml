<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ConfirmOrder">
    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:text="Order Confirmation"
        android:textSize="26sp"
        android:textStyle="bold"
        />
    <TextView
        android:id="@+id/ship"
        android:layout_below="@id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:text="Shipping Address"
        android:textSize="22sp"
        android:textStyle="bold"
        />
    <TextView
        android:layout_below="@id/ship"
        android:layout_marginTop="4dp"
        android:id="@+id/shipName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Madara Uchiha"
        android:layout_marginHorizontal="20dp"
        android:textSize="18sp"/>
    <TextView
        android:layout_below="@id/shipName"
        android:id="@+id/shipAddress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="5050 mandaluyong street"
        android:layout_marginHorizontal="20dp"
        android:textSize="18sp"/>
    <TextView
        android:id="@+id/prod"
        android:layout_marginTop="16dp"
        android:layout_below="@id/shipAddress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:text="Product Item/s"
        android:textSize="22sp"
        android:textStyle="bold"
        />
    <LinearLayout
        android:id="@+id/payment"
        android:layout_above="@id/summary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginHorizontal="20dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Payment Method"
            android:textSize="22sp"
            android:textStyle="bold"
            />
        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="COD"
            android:textStyle="bold"
            android:textSize="18sp"
            android:checked="true"
            android:editable="false"
            />
        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Card (Currently Unavailable)"
            android:textSize="18sp"
            android:enabled="false"
            />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/summary"
        android:layout_above="@id/footer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginHorizontal="20dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Summary"
            android:textSize="22sp"
            android:textStyle="bold"
            />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Subtotal"
                android:textSize="18sp"
                />
            <TextView
                android:id="@+id/subtotalPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="PHP120.00"
                android:textSize="18sp"
                android:layout_alignParentEnd="true"
                />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Shipping Fee"
                android:textSize="18sp"
                />
            <TextView
                android:id="@+id/shippingFee"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="PHP45.00"
                android:textSize="18sp"
                android:layout_alignParentEnd="true"
                />
        </RelativeLayout>
    </LinearLayout>
    <RelativeLayout
        android:id="@+id/footer"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:paddingHorizontal="20dp"
        >
        <TextView
            android:id="@+id/totalPrice"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="PHP 0.00"
            android:gravity="center_vertical"
            android:textStyle="bold"
            android:textSize="18sp"
            />
        <com.google.android.material.button.MaterialButton
            android:id="@+id/placeOrderBtn"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:backgroundTint="@color/red"
            android:layout_centerVertical="true"
            android:textStyle="bold"
            android:text="Place Order"/>
    </RelativeLayout>
    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/prod"
        android:layout_above="@id/payment"
        android:layout_marginHorizontal="20dp"
        android:id="@+id/recyclerView"
        tools:listitem="@layout/item_order"
        />

</RelativeLayout>